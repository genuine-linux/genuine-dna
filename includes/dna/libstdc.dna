#!/bin/bash

mkdir -pv ../gcc-build
cd ../gcc-build

../$DNA_PACKAGE_VERSION/libstdc++-v3/configure \
    --host=$GENUINE_TGT                 \
    --prefix=$TOOLBOX             \
    --disable-multilib              \
    --disable-shared                \
    --disable-nls                   \
    --disable-libstdcxx-threads     \
    --disable-libstdcxx-pch         \
    --with-gxx-include-dir=$TOOLBOX/$GENUINE_TGT/include/c++/4.9.0

make

make install
